{{! ============================================
    LAYOUT PRINCIPAL
    Template base para todas las páginas
    ============================================ }}
<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{titulo}}</title>

  {{! ==========================================
      ESTILOS CSS
      ========================================== }}
  <link rel="stylesheet" href="/assets/main.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF"
        crossorigin="anonymous">
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
</head>

<body>
  {{! ==========================================
      HEADER - BARRA DE NAVEGACIÓN
      ========================================== }}
  <header class="page-header">
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
      <div class="container-fluid px-4">
        {{! Logo / Marca y Botón de Inicio }}
        <div class="d-flex align-items-center gap-3">
          <a class="navbar-brand fw-bold text-primary mb-0" href="/home">MetaMapa</a>
          {{#unless esHome}}
            <a href="/home" class="btn btn-outline-primary btn-sm">⬅️ Volver al Inicio</a>
          {{/unless}}
        </div>

        {{! Contenido del Header (dinámico) }}
        <div class="ms-auto d-flex align-items-center gap-3">
          {{#block "contenido-header"}}{{/block}}
        </div>
      </div>
    </nav>
  </header>

  {{! ==========================================
      CONTENIDO PRINCIPAL
      ========================================== }}
  <main class="container my-4">
    {{#block "contenido"}}{{/block}}
  </main>

  {{! ==========================================
      FOOTER
      ========================================== }}
  <footer class="page-footer text-center py-4 mt-auto">
    <hr>
    <p class="text-muted mb-0">© {{year}} MetaMapa — Todos los derechos reservados.</p>
  </footer>

  {{! ==========================================
      SCRIPTS JAVASCRIPT
      ========================================== }}
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-kQtW33rZJAHjgefvhyyzcGF3lY+Wz5yQpD8o6z8vEflVxH0zE6iYPaM4BgjkJr29"
          crossorigin="anonymous"></script>
</body>
</html>
